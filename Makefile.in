#	${PYTHON_BIN} -O $(PY_STD_LIB)/compileall.py $(PY_STD_LIB)/site-packages/mod_python

clean:
	cd src && $(MAKE) clean
	rm -f core

distclean: clean
	cd src && $(MAKE) distclean
	cd Doc && $(MAKE) distclean
	cd dist && $(MAKE) distclean
	rm -rf Makefile config.h config.status config.cache config.log \
		test/testconf.py 

